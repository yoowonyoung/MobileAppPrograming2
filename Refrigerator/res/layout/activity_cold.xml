<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:background="#fffdfdfe">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:id="@+id/TopLineImg"
            android:background="@drawable/bar1"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/coldAddPageBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:background="@drawable/plus1"
            android:onClick="onClick" />

        <ImageButton
            android:id="@+id/coldUperBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/coldAddPageBtn"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:layout_toLeftOf="@+id/coldAddPageBtn"
            android:layout_toStartOf="@+id/coldAddPageBtn"
            android:background="@drawable/home1"
            android:onClick="onClick" />

        <ImageView
            android:id="@+id/coldDeco3"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_below="@+id/TopLineImg"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yu" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:id="@+id/imageView11"
            android:layout_below="@+id/coldDeco3"
            
            android:background="@drawable/yu_bar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/coldDeco4"
            android:layout_width="260dp"
            android:layout_height="40sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView11"
            android:background="@drawable/yu3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/coldDeco4"
            android:orientation="vertical" >
            
            <ListView
                android:id="@+id/l_view_cold"
                android:layout_width="fill_parent"
                android:layout_height="347dp"
                android:layout_gravity="center_vertical" />
			
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/ScreenNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:text="냉동실 "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fffffff7"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>